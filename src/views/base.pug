  head
    title #{ pageTitle } | Wetube
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body
    header
      h1= pageTitle
    nav
      ul
        li
          li 
            a(href="/videos/upload") Upload Video
            li 
          li 
            a(href="/") Home
          li 
            a(href="/search") Search
           
          if loggedIn
            li 
              a(href="/logout") Logout 
            li 
