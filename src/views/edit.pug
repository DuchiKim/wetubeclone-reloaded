extends base.pug

block content
  form(method="POST")
    input(
      placeholder="Title",
      value=video.title,
      required,
      type="text",
      name="title"
    )
    input(
      placeholder="Description",
      required,
      type="text",
      name="description",
      value=video.description
    )
    input(
      placeholder="Hashtags, seperated by comma",
      required,
      type="text",
      name="hashtags",
      value=video.hashtags.join()
    )
    input(type="submit", value="Edit Video")
