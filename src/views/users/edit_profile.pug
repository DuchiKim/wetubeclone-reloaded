extends ../base

block content
    if errorMessage 
        span=errorMessage
    
    Image(src="/" + loggedInUser.AvatarUrl , width="100" , height="100")
    form(method="POST" , enctype="multipart/form-data")
        input(type="text" , value=loggedInUser.username , name="EditName")
        input(type="text" , value=loggedInUser.email , name="EditEmail")
        input(type="text" , value=loggedInUser.location , name="EditLocation")
        lable(for="avatar") Avatar
        input(type="file" , id="avatar" , name = "avatar" , accept="image/*")
        if !loggedInUser.socialOnly
            a(href="edit_password") Password Change Here 
        br
        input(type="submit", value="submit" , name="SubmitEditInfo")